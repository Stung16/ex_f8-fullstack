<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
      integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm"
      crossorigin="anonymous"
    />
    <title>Edit Account</title>
  </head>
  <body>
    <h2>Các thiết bị bạn đã đăng nhập</h2>
    <a href="/" class="btn btn-info text-white">Trở lại</a>
    <ul class="list-group">
        <li class="list-group-item">
        <% devices.forEach(device => { %>
        <form action="/account/checkDevice/<%= device.id %>" method="post">
          <div><span>Trình duyệt: <%= device.browser %></span></div>
          <div>
            <span
              >Thời gian đăng nhập: <%=
              moment(device.login_time).format('HH:mm DD-MM-YYYY ') %></span
            >
          </div>
          <div>
            <span
              >Thời gian hoạt động gần đây nhất: <%=
              moment(device.last_active_time).format('HH:mm DD-MM-YYYY ')
              %></span
            >
          </div>
          <% if (device.status) { %>
            <button type="submit" class="btn btn-primary btn-lg active" role="button" aria-pressed="true">Đăng xuất</button>
          <% } else { %>
            <button type="submit" class="btn btn-secondary btn-lg disabled" role="button" aria-disabled="true">Đã đăng xuất</button>
          <% } %>
        </form>
        <hr />
        <% }) %>
      </li>
    </ul>
  </body>
</html>

<h1 class="text-center">Đăng ký</h1>
<%- msg.length ? `<div class="alert alert-danger" role="alert">${msg[0]}</div>`: '' %>
<form action="" method="post">
  <div class="mb-3">
    <label for="">Email</label>
    <input
      type="text"
      name="email"
      class="form-control"
      value="<%= old?.email %>"
      placeholder="Email..."
    />
    <p class="text-danger"><%= req.errors.email %></p>
  </div>

  <div class="mb-3">
    <label for="">Mật khẩu</label>
    <input
      type="password"
      name="password"
      class="form-control mt-1"
      placeholder="Nhập Mật khẩu ..."
    />
    <p class="text-danger"><%= req.errors.password %></p>
  </div>

  <div class="mb-3">
    <label for="">Nhập lại mật khẩu</label>
    <input
      type="password"
      name="confirmPassword"
      class="form-control mt-1"
      placeholder="Nhập lại mật khẩu ..."
    />
    <p class="text-danger"><%= req.errors.confirmPassword %></p>
  </div>
  <button type="submit" class="btn btn-info text-white">Đăng ký</button>
  <a href="/login" class="btn btn-primary text-white">Đăng nhập</a>
</form>

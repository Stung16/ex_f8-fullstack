<h1>Sửa khóa học</h1>
<form action="" method="post">
  <div class="mb-3">
    <label for=""> Tên </label>
    <input
      type="text"
      name="name"
      class="form-control"
      placeholder="Tên..."
      value="<%=Object.keys(req.old).length ? req.old.name : course.name %>"
    />
    <span class="text-danger"><%= req.errors.name %></span>
  </div>
  <div class="mb-3">
    <label for=""> Giá </label>
    <input
      type="number"
      name="price"
      class="form-control"
      placeholder="Giá..."
      value="<%=Object.keys(req.old).length ? req.old.price : course.price %>"
    />
    <span class="text-danger"><%= req.errors.price %></span>
  </div>
  <div class="mb-3">
    <label for=""> Trạng thái </label>
    <select name="status" class="form-select">
        <option value="inactive" <%=course.status?'':'selected'%>>Chưa kích hoạt</option>
        <option value="active" <%=course.status?'selected':''%>>Kích hoạt</option>
    </select>
  </div>
  <button type="submit" class="btn btn-success">Lưu</button>
  <a href="/" class="btn btn-danger">Hủy</a>
</form>